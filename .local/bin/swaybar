#!/bin/sh

date_formatted=$(date +'%Y-%m-%d %I:%M:%S %p')
battery=$(sh ~/.local/bin/battery)
charge_state=$(cat /sys/class/power_supply/BAT0/status)
volume=$(sh ~/.local/bin/volume)

if [ $battery -gt 21 ]; then battery_emoji="ğŸ”‹"
else battery_emoji="ğŸª«"; fi

if [ $volume -gt 49 ]; then volume_emoji="ğŸ”Š"
elif [ $volume -lt 50 ] && [ $volume -gt 0 ]; then volume_emoji="ğŸ”‰"
else volume_emoji="ğŸ”ˆ"; fi

echo $volume_emoji $volume% $battery_emoji $battery% \| $charge_state â° $date_formatted
